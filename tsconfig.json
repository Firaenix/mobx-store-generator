{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "lib": ["es2015", "esnext", "dom"],
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "./lib",
    "outDir": "./lib",
    "pretty": true
  },
  "exclude": ["node_modules", "stories", "utils", "lib"]
}
